<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AttendanceServlet</servlet-name>
        <servlet-class>controller_mockup.AttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerAttController</servlet-name>
        <servlet-class>controller.AttController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller_auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller_auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>controller_home.HomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LecturerTimetableController</servlet-name>
        <servlet-class>controller.TimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MockupAttendance</servlet-name>
        <servlet-class>controller_mockup.AttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MockupEdit</servlet-name>
        <servlet-class>controller_mockup.EditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MockupReport</servlet-name>
        <servlet-class>controller_mockup.ReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterController</servlet-name>
        <servlet-class>controller.FilterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalculateController</servlet-name>
        <servlet-class>controller.CalculateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceServlet</servlet-name>
        <url-pattern>/student/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerAttController</servlet-name>
        <url-pattern>/lecturer/takeatt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MockupAttendance</servlet-name>
        <url-pattern>/mockup/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MockupEdit</servlet-name>
        <url-pattern>/mockup/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MockupReport</servlet-name>
        <url-pattern>/mockup/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerTimetableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterController</servlet-name>
        <url-pattern>/Filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalculateController</servlet-name>
        <url-pattern>/lecturer/calculate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
